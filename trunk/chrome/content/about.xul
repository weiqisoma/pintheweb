<?xml version="1.0"?>

<?xml-stylesheet href="chrome://global/skin/" type="text/css"?> 
<?xml-stylesheet href="chrome://pintheweb/skin/about.css" type="text/css"?> 

<!DOCTYPE dialog SYSTEM "chrome://pintheweb/locale/pintheweb.dtd">

<dialog id="main"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        xmlns:html="http://www.w3.org/1999/xhtml"
        windowtype="pintheweb:About"
        onload="init(event);"
        buttons="accept"
        onunload="finish(event);"
        title="&ptw.about; Pin the web">

  <vbox id="content" flex="1">
    <stack flex="1">
      <hbox flex="1" pack="start">
        <image id="logo"/>
      </hbox>
      <vbox id="name-box" flex="1" align="end" pack="end">
        <label id="name" value="pintheweb.com"/>
        <label id="version" value="0.1 alpha"/>
        <label id="autor" value="Ferran Martínez Viñals"/>
      </vbox>
    </stack>

    <vbox id="legal" class="inset">
      <description>
        This program is free software; you can redistribute it and/or
